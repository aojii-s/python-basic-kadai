        "# 上辺(単位：cm)\n",
        "a = 10\n",
        "\n",
        "# 下辺(単位：cm)\n",
        "b = 20\n",
        "\n",
        "# 高さ(単位：cm)\n",
        "c = 5\n",
        "\n",
        "# 公式：台形の面積 = (上辺＋下辺)×高さ÷2\n",
        "area = (a + b) * c / 2\n",
        "\n",
        "print(str(area) + \"㎠\")"
      ]
